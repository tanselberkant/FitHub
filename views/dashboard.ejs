    <div class="modal fade" id="addPrograms" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Proficiency</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/programs">                        
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Program Name">
                        </div>
                        <div class="form-group">
                            <input type="number" name="recommendedWeek" class="form-control" placeholder="Recommended Week">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="category" aria-placeholder="Choose A Category">
                                <% for (let i = 0; i < categories.length; i++) { %>
                                <option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="contents" class="form-control" placeholder="Program Content">
                        </div>
                        <div id="programContent"></div>
                        <!-- For Auth-->
                        <!--<div class="form-group">
                            <input type="hidden" name="role" class="form-control" value="<%= user.role %>">
                        </div> -->                                                
                        <div class="">
                            <input type="button" value="Add More Content" class="btn btn-primary" onclick="add_fields();">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">Create Program</button>
                        </div>                    
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>            
                </div>
            </div>
        </div>
    </div>

    <script>
        function add_fields() {
            document.getElementById('programContent').innerHTML += 
            `<div class="form-group"><input type="text" name="contents" class="form-control" placeholder="Program Content"></div>`;
        }
    </script>

    <% } %>
<% } %>

