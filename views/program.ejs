<%- include ('partials/_header.ejs') %>

<div class="back_re mb-3">
    <div class="container">
       <div class="row">
          <div class="col-md-12">
             <div class="title">
              <h2>Program</h2>
             </div>
          </div>
       </div>
    </div>
</div>

<div class="row d-flex justify-content-start m-1">
    <!-- Showing Program-->    
    <div class="col-lg-10 col-md-10">
        <div class="row d-flex justify-content-start m-1">
            <div class="about">
                <div class="container">
                <div class="row d_flex">
                    <div class="col-md-5">
                        <div class="titlepage">
                            <h3 class="mytxt4" style="color: #022c53;"><%= program.name %> </h3>
                            <h5 class="mytxt5" ><span style="font-weight: 700;">Trainer:</span> <%= program.user.name %></h5>
                            <% for(let x = 0; x < program.contents.length; x++) { %>
                                <p class="mytxt2 mb-2" style="font-size: 18px;">
                                    <i class="fa fa-chevron-right mr-1"></i><%= program.contents[x] %>
                                </p>
                            <% } %>  
                            <div id="program-content">                            
                            <% if (user && !(user.enrolledPrograms.includes(program._id))) { %>
                                <form method="POST" action="/programs/enroll">
                                    <input type="hidden" name="program_id" value="<%= program._id %>">
                                    <button class="btn btn-success px-4 mb-3 mt-3 ml-5">Enroll</button>
                                </form>                   
                            <% } %>                                
                            </div>         
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="about_img">
                            <figure><img src="/images/myprograms.jpg"></figure>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!--Listing Categories-->
    <div class="col-lg-2 col-md-2" id="customCategory">
        <div class="footer-links">
            <h2 class="mt-2 ml-3">Categories</h2>
            <ul id="customCatUl">
                <% for(let i = 0; i < categories.length; i++) { %>
                <li class="customCatli">
                    <a href="#">
                        <i class="fa fa-chevron-right mr-1"></i> <%= categories[i].name %>
                    </a>
                </li>                
                <% } %>                             
            </ul>
        </div>
    </div>
</div>





<%- include ('partials/_footer.ejs') %>